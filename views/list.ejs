<%- include('partials/header') -%>
    <div class="box" id="heading">
       <h1><%= decodeURI(listtype) %></h1>
    </div>

      <div class="box">

      <%  newitem.forEach((item) => { %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" onChange="this.form.submit()" name="checkbox" value=<%=item._id%>>
            <input type="hidden" name="list" value= <%= listtype %> >
            <p><%= item.name %></p>
          </div>
        </form>

        <% }); %>

        <form class="item" action="/" method="post">
          <input type="text" name="addtask" value="" placeholder="Add item" onKeyDown="javascript: var keycode = keyPressed(event); if(keycode==32){ return false; }" autofocus>
          <button  type="submit" name="list" value=<%= listtype %>>+</button>
        </form>

    </div>
<%- include('partials/footer') -%>
